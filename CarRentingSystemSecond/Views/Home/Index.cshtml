@model List<CarListingViewModel>


@{
    ViewData["Title"] = "Welcome";
}

@{
    var firstCar = Model.Any() ? Model[0] : null;
    var secondCar = Model.Count > 1 ? Model[1] : null;
    var thirdCar = Model.Count > 2 ? Model[2] : null;
}

@if (!Model.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the best place for renting cars</h1>
        <p class="lead">There are no cars in the system right now</p>
        <hr class="my-4">
        <p class="lead">
            <a asp-controller="Cars" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Car</a>
        </p>
    </div>
}

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @if (firstCar != null)
        {
            <div class="carousel-item active">
                <img src="@firstCar.ImageUrl" class="d-block w-100" alt="@firstCar.Brand @firstCar.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Cars" asp-action="Details" asp-route-id="@firstCar.Id">@firstCar.Year @firstCar.Brand @firstCar.Model</a></h5>
                </div>
            </div>
        }
        @if (secondCar != null)
        {
            <div class="carousel-item">
                <img src="@secondCar.ImageUrl" class="d-block w-100" alt="@secondCar.Brand @secondCar.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Cars" asp-action="Details" asp-route-id="@secondCar.Id">@secondCar.Year @secondCar.Brand @secondCar.Model</a></h5>

                </div>
            </div>
        }
        @if (thirdCar != null)
        {
            <div class="carousel-item">
                <img src="@thirdCar.ImageUrl" class="d-block w-100" alt="@thirdCar.Brand @thirdCar.Model">
                <div class="carousel-caption d-none d-md-block">
                    <h5><a class="btn btn-primary" asp-controller="Cars" asp-action="Details" asp-route-id="@thirdCar.Id">@thirdCar.Year @thirdCar.Brand @thirdCar.Model</a></h5>

                </div>
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>