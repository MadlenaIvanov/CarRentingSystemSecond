@model AddCarFormModel

@{
    ViewData["Title"] = "Add a Car";
}


<div class="container">
    <div class="row">
        <div class="offset-lg-2 col-lg-8 col-sm-12">
            <h2 class="heading-margin text-center">Add a Car</h2>
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Brand" class="form-label"></label>
                    <input asp-for="Brand" class="form-control" placeholder="BMW, Mercedes, etc...">
                </div>
                <div class="mb-3">
                    <label asp-for="Model" class="form-label"></label>
                    <input asp-for="Model" class="form-control" placeholder="640D, S-Class, etc...">
                </div>

                <div class="mb-3">
                    <label asp-for="CategoryId" class="form-label"></label>
                    <select asp-for="CategoryId" class="form-control">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" placeholder="This is the perfect car..."></textarea>
                </div>
                <div class="mb-3">
                    <label asp-for="Year" class="form-label"></label>
                    <input asp-for="Year" class="form-control" placeholder="2022">
                </div>
                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Your fine URL here.">
                </div>

                <input class="btn btn-primary" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>
